<div class="container-fluid">
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">SISTEMA WEB</a>
            <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Cadastrar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page"
                            href="/consulta">Consultar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {{#each post}}
        {{#dataValues}}
            <form action="/editar-usuario/{{id}}" method="post" class="container mx-auto col">
                <p class="text-start fs-5 mt-3">Editar - Agendamento de Potenciais Clientes</p>
                <p class="text-start fs-6">Sistema utilizado para agendamento de serviços</p>  
                <div class="col gap-3 my-3 d-flex flex-column">
                    <div class="col">
                        <div class="col">
                            Nome:
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" id="nome" name="nome" value="{{nome}}">
                        </div>
                    </div>
                    <div class="col">
                        <div class="col">
                            Endereço:
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" id="endereco" name="endereco" value="{{endereco}}">
                        </div>
                    </div>
                    <div class="col">
                        <div class="col">
                            Bairro:
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" id="bairro" name="bairro" value="{{bairro}}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="col">
                                CEP:
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" id="cep" name="cep" value="{{cep}}">
                            </div>
                        </div>                    
                        <div class="col">
                            <div class="col">
                                Estado:
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" id="estado" name="estado" value="{{estado}}">
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="col">
                            Cidade:
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" id="cidade" name="cidade" value="{{cidade}}">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="col">
                                Telefone:
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" id="telefone" name="telefone" value="{{telefone}}">
                            </div>
                        </div>
                        <div class="col">
                            <div class="col">
                                Celular:
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" id="celular" name="celular" value="{{celular}}">
                            </div>
                        </div>
                    </div>

                    <div class="col">
                        <div class="col">
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </div>
                    </div>
                </div>  
            </form>
        {{/dataValues}}
    {{/each}}
</div>